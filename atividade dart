// Definição da classe Aluno

class Livro {

  // Atributos da classe

  String titulo;
  String autor;
  String genero;
  String editora;
  double precoVenda;
  double custo_fabricacao;
  int copias_vendiadas;
  
  
  
  

  // Construtor da classe

  Livro (this.titulo, this.autor, this.genero, this.editora, this.precoVenda, this.custo_fabricacao, this.copias_vendiadas, );


  // Método para exibir informações do aluno

  void exibirInformacoes() {

    print("Titulo: $titulo");
    print("Autor: $autor");
    print("Genero: $genero");    
    print("Editora: $editora");
    print("Preço de venda: $precoVenda");
    print("Copias vendidas: $copias_vendidads") 
  }


  // Método para calcular a média das notas

  double calcularLucro() {

    return (precoVenda - custo_fabricacao)* copias_vendidas

  }


  // Método para exibir a média formatada

  void exibirMediaFormatada() {

    print("Média das notas: ${calcularMedia().toStringAsFixed(2)}");

  }

}


void main() {

  // Criando objetos da classe Aluno

  Livro aluno1 = Livro("", 20, 7.456, 8.019, 6.589);

  Livro aluno2 = Livro("Maria", 22, 9.123, 8.456, 7.789);


  // Usando métodos dos objetos

  aluno1.exibirInformacoes();

  aluno1.exibirMediaFormatada();

  print("");


  aluno2.exibirInformacoes();

  aluno2.exibirMediaFormatada();

}
